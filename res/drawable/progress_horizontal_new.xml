<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background" android:left="10dip" android:right="10dip">
        <shape android:shape="line">
            <stroke
                android:width="1dip"
                android:color="#d1d1d1"
            />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress" android:left="10dip" android:right="10dip">
        <clip>
            <shape android:shape="line">
                <stroke
                    android:width="3dip"
                    android:color="#d1d1d1"
                />
            </shape>
        </clip>
    </item>

    <!-- Can't actually use
        android:drawable="@drawable/panel_now_playing_progress_bar"
        here, so fake it with a similar looking gradient.
    -->
    <item android:id="@android:id/progress" android:left="10dip" android:right="10dip">
        <clip>
            <shape android:shape="line">
                <stroke
                    android:width="3dip"
                    android:color="#ff8800"
                />
            </shape>
        </clip>
    </item>



</layer-list>

