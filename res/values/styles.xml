        <item name="android:iconifiedByDefault">true</item>
    </style>

    <style name="MySearchView" parent="@android:style/Widget.Material.Light.SearchView">
        <item name="android:closeIcon">@drawable/status_delete</item>
    </style>

    <style name="ActionBarStyleNewUI" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">@color/actionbar_background_color</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyleNewUI</item>
        <item name="android:backgroundSplit">@null</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ActionBarTitleTextStyleNewUI" parent="android:TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/background_light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MusicPickerTheme" parent="@style/MusicTheme">
        <item name="android:actionBarStyle">@style/ActionBarPickerStyle</item>
    </style>

    <style name="ActionBarPickerStyle" parent="@style/ActionBarStyleNewUI">
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Theme.NoDisplay" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">false</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle1</item>
        <item name="android:toolbarStyle">@style/CustomToolbar</item>
    </style>

    <style name="AppThemePlayback" parent="AppTheme.Base">
        <item name="android:actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle2</item>
        <item name="android:toolbarStyle">@style/CustomToolbar</item>
    </style>

    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item> <!-- 设置该属性边距为0dp -->
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">true</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">3dp</item>
    </style>

    <style name="OverflowButtonStyle1" parent="@android:style/Widget.Material.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow_material</item>
    </style>

    <style name="OverflowButtonStyle2" parent="@android:style/Widget.Material.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow_material_white</item>
    </style>

    <style name="AppTheme1" parent="AppTheme.Base">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme2" parent="AppTheme.Base">
        <item name="android:statusBarColor">#c2185b</item>
