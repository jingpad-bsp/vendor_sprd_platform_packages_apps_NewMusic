<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dip"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/ablum_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="22dp"
        android:src="@drawable/pic_album_detail_song" />

    <ImageView
        android:id="@+id/drm_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="52dip"
        android:layout_alignBottom="@+id/ablum_icon" />

    <TextView
        android:id="@+id/track_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/ablum_icon"
        android:layout_centerVertical="true"
        android:textColor = "@android:color/black"
        android:ellipsize="end"
        android:maxEms="10"
        android:maxLines="1"
        android:layout_marginEnd="50dp"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/track_options"
        android:layout_width="48dp"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="3dp"
        android:src="@drawable/ic_menu_detail" />


</RelativeLayout>